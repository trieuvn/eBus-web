                                <span class="material-symbols-outlined">add</span>
                            </button>
                    </div>
                    <div class="divide-y divide-border-light dark:divide-border-dark text-sm">
                        <!-- Passenger 1 -->
                        @for (int i = 0; i < Model.Passengers.Count; i++)
