<script>
        const leftRows = ['A', 'B', 'C', 'D', 'E'];
    const rightRows = ['F', 'G', 'H', 'I', 'J'];
    const seatMap = document.getElementById('seatMap');
    let selectedSeat = null;

    const occupiedSeats = ['A1', 'A2', 'C2', 'F1'];

    seatMap.style.position = 'relative';
    seatMap.className = 'absolute inset-0 flex justify-center';

    const wrapper = document.createElement('div');
    // --- PHẦN CHỈNH SỬA TẠI ĐÂY ---
    wrapper.className = 'flex justify-between w-full';
       wrapper.style.paddingLeft = '30px';  // Giảm từ 55px -> 40px để dạt sang trái
    wrapper.style.paddingRight = '40px'; // Cân bằng lề phải
    wrapper.style.marginTop = '90px';   // Giảm từ 145px -> 120px để nhích lên
    wrapper.style.width = '85%';         // Tăng chiều rộng để các cột ghế dạt ra đúng vị trí lòng xe
    // ------------------------------

    const leftCol = document.createElement('div');
    leftCol.className = 'flex flex-col gap-y-[21px]'; // Tăng nhẹ khoảng cách dọc để khớp hàng dưới

    const rightCol = document.createElement('div');
    rightCol.className = 'flex flex-col gap-y-[21px]';

    // --- Render cột trái ---
    leftRows.forEach((row) => {
        const rowDiv = document.createElement('div');
        rowDiv.className = 'flex gap-x-12'; // Tăng khoảng cách ngang giữa 2 ghế sát cửa sổ

        renderSeat(row, 1, rowDiv);
        renderSeat(row, 2, rowDiv);
        leftCol.appendChild(rowDiv);
    });

    // --- Render cột phải ---
    rightRows.forEach((row) => {
        const rowDiv = document.createElement('div');
        rowDiv.className = 'flex gap-x-12';

        renderSeat(row, 1, rowDiv);
        renderSeat(row, 2, rowDiv);
        rightCol.appendChild(rowDiv);
    });

    wrapper.appendChild(leftCol);
    wrapper.appendChild(rightCol);
    seatMap.appendChild(wrapper);

    function renderSeat(row, col, parent) {
        const seatCode = row + col;
        const seatBtn = document.createElement('button');
        seatBtn.dataset.seat = seatCode;

        // Giữ nguyên kích thước w-8 h-8 nhưng bo góc tròn hơn để trông chuyên nghiệp
        const baseClass = "w-8 h-8 rounded-lg flex flex-col items-center justify-center transition shadow-md border-0 outline-none";

        if (occupiedSeats.includes(seatCode)) {
            seatBtn.className = `${baseClass} bg-red-500 text-white cursor-not-allowed`;
            seatBtn.disabled = true;
        } else {
            seatBtn.className = `${baseClass} bg-white/90 text-gray-800 hover:bg-white`;
        }

        seatBtn.innerHTML = `
            <span class="material-symbols-outlined text-[13px]">event_seat</span>
            <span class="text-[8px] font-bold leading-none">${seatCode}</span>
        `;

        seatBtn.onclick = () => {
            document.querySelectorAll('#seatMap button').forEach(s => {
                if (!s.disabled) s.classList.remove('bg-blue-600', 'text-white');
            });
            if (!seatBtn.disabled) {
                seatBtn.classList.add('bg-blue-600', 'text-white');
                selectedSeat = seatCode;
            }
        };

        parent.appendChild(seatBtn);
    }
</script>
