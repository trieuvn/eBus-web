@{
    var fullName = Context.Session.GetString("FullName") ?? "User";
    var avatarChar = fullName.Trim().Split(' ').Last().Substring(0, 1).ToUpper();
    var area = ViewContext.RouteData.Values["area"]?.ToString();
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Bus Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Select2 LOCAL -->
    <link href="~/dist/css/select2.css" rel="stylesheet" />


    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />

    @RenderSection("Styles", false)
    <style>
        .avatar-circle {
            width: 42px;
            height: 42px;
            border-radius: 25%;
            background: linear-gradient(135deg, rgba(157, 78, 221, 0.9), rgba(199, 125, 255, 0.9) );
            color: #fff;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            text-transform: uppercase;
        }

        .action-buttons button {
            border: none;
            padding: 6px 10px;
            border-radius: 8px;
            color: #fff;
            cursor: pointer;
            margin-left: 6px;
            transition: all 0.25s ease;
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

        /* 👁 View */
        .btn-view {
            background: linear-gradient(135deg, #42a5f5, #1e88e5);
        }

        /* ✏ Edit */
        .btn-edit {
            background: linear-gradient(135deg, #66bb6a, #43a047);
        }

        /* 🗑 Delete */
        .btn-delete {
            background: linear-gradient(135deg, #ef5350, #e53935);
        }

        /* Hover effect */
        .action-buttons button:hover {
            transform: translateY(-2px);
            opacity: 0.9;
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        }

        /* Icon size */
        .action-buttons i {
            font-size: 1rem;
        }

    </style>

</head>
<body class="admin-body">

    <div class="admin-wrapper d-flex">

        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header d-flex align-items-center gap-3" style="margin-left: 12px;padding-top: 12px">
                <div class="d-flex align-items-center gap-2">
                    <div class="avatar-circle">
                        @avatarChar
                    </div>
                   <div class="lh-sm">
                        <div class="fw-bold">BusAdmin</div>
                        <div class="text-muted">@fullName</div>
                    </div>
                </div>
               
            </div>

            <hr />

            <nav class="nav flex-column gap-1">

                <a class="nav-link @(area == "Admin" && controller == "Dashboard" ? "active" : "")"
                   href="/Admin/Dashboard">
                    <i class="fa-solid fa-chart-line"></i> Dashboard
                </a>

                <a class="nav-link @(area == "Admin" && controller == "User" ? "active" : "")"
                   href="/Admin/User">
                    <i class="fa-solid fa-users"></i> Users
                </a>

                <a class="nav-link @(area == "Admin" && controller == "Route" ? "active" : "")"
                   href="/Admin/Route">
                    <i class="fa-solid fa-route"></i> Routes
                </a>

                <a class="nav-link @(area == "Admin" && controller == "Trip" ? "active" : "")"
                   href="/Admin/Trip">
                    <i class="fa-solid fa-bus"></i> Trips
                </a>

                <a class="nav-link @(area == "Admin" && controller == "Booking" ? "active" : "")"
                   href="/Admin/Booking">
                    <i class="fa-solid fa-ticket"></i> Bookings
                </a>
            </nav>


            <div class="sidebar-footer mt-auto">
                <a class="nav-link text-danger" href="/Login">
                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                </a>
            </div>
        </aside>

        <!-- Main -->
        <div class="admin-main flex-grow-1 d-flex flex-column">

            <!-- Topbar -->
            <header class="admin-topbar d-flex justify-content-between align-items-center" style="height: 71px;">
                <h5 class="fw-bold mb-0">@ViewData["Header"]</h5>

                <div class="d-flex align-items-center gap-3">
                    <div class="input-group search-box d-none d-md-flex">
                        <span class="input-group-text">
                            <i class="fa-solid fa-search"></i>
                        </span>
                        <input class="form-control" placeholder="Search bookings..." />
                    </div>

                    <button class="btn btn-light position-relative">
                        <i class="fa-solid fa-bell"></i>
                        <span class="notification-dot"></span>
                    </button>
                </div>
            </header>

            <!-- Page Content -->
            <main class="admin-content flex-grow-1" style="padding-left: 20px;margin-top:10px;">
                @RenderBody()
            </main>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/dist/js/select2.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
