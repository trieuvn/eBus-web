<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Bus Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />

    @RenderSection("Styles", false)
</head>
<body class="admin-body">

    <div class="admin-wrapper d-flex">

        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header d-flex align-items-center gap-3" style="margin-left: 12px;padding-top: 12px">
                <img src="https://i.pravatar.cc/80?img=12" class="rounded-circle" width="42" />
                <div>
                    <div class="fw-bold">BusAdmin</div>
                    <small class="text-muted">System Administrator</small>
                </div>
            </div>

            <hr />

            <nav class="nav flex-column gap-1">
                <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                    <i class="fa-solid fa-chart-line"></i> Dashboard
                </a>
                <a class="nav-link" href="/Admin/User"><i class="fa-solid fa-users"></i> Users</a>
                <a class="nav-link" href="#"><i class="fa-solid fa-route"></i> Routes</a>
                <a class="nav-link" href="#"><i class="fa-solid fa-bus"></i> Trips</a>
                <a class="nav-link" href="#"><i class="fa-solid fa-ticket"></i> Bookings</a>
                <a class="nav-link" href="#"><i class="fa-solid fa-chart-pie"></i> Reports</a>
                <a class="nav-link" href="#"><i class="fa-solid fa-gear"></i> Settings</a>
            </nav>

            <div class="sidebar-footer mt-auto">
                <a class="nav-link text-danger" href="/Login">
                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                </a>
            </div>
        </aside>

        <!-- Main -->
        <div class="admin-main flex-grow-1 d-flex flex-column">

            <!-- Topbar -->
            <header class="admin-topbar d-flex justify-content-between align-items-center" style="height: 77px;">
                <h5 class="fw-bold mb-0">@ViewData["Header"]</h5>

                <div class="d-flex align-items-center gap-3">
                    <div class="input-group search-box d-none d-md-flex">
                        <span class="input-group-text">
                            <i class="fa-solid fa-search"></i>
                        </span>
                        <input class="form-control" placeholder="Search bookings..." />
                    </div>

                    <button class="btn btn-light position-relative">
                        <i class="fa-solid fa-bell"></i>
                        <span class="notification-dot"></span>
                    </button>
                </div>
            </header>

            <!-- Page Content -->
            <main class="admin-content flex-grow-1" style="padding-left: 20px;margin-top:10px;">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
