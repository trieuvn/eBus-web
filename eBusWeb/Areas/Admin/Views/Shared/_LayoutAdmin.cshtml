<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BusBooker</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Header -->
    <header class="border-bottom bg-white shadow-sm">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <div class="d-flex align-items-center gap-2">
                <i class="fa-solid fa-bus text-primary fs-3"></i>
                <span class="fw-bold fs-4">BusBooker</span>
            </div>
            <div>
                <span class="text-muted me-3 d-none d-sm-inline">Don't have an account?</span>
                <a class="btn btn-outline-primary fw-bold" href="/Signup">Sign Up</a>
            </div>
        </div>
    </header>

    <!-- Main -->
    <main class="container-fluid p-0">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center text-muted py-4 small">
        © 2024 BusBooker Inc. All rights reserved.
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
