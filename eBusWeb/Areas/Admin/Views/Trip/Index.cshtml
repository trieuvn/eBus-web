    </div>
</div>
<!-- Modal Delete Trip -->
<div class="modal fade" id="deleteTripModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-body p-4 text-center">
                <div class="d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 80px; height: 80px; background-color: #fef2f2; border-radius: 50%;">
                    <i class="fa-solid fa-triangle-exclamation fs-1 text-danger"></i>
                </div>

                <!-- Trip ID sẽ được update bằng JS -->
                <h3 class="fw-bold mb-3" id="deleteTripTitle">Delete Trip #?</h3>

                <div id="deleteTripContent"></div>

                <div class="d-flex gap-2 mt-4">
                    <button type="button" class="btn btn-outline-secondary py-2 w-100 fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="confirmDeleteTripBtn" class="btn btn-danger py-2 w-100 fw-bold d-flex align-items-center justify-content-center gap-2">
                        <i class="fa-solid fa-trash-can"></i> Confirm Deletion
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

