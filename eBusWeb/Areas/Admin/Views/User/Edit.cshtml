<script>
    async function updateUser() {
        const userData = {
            Id: "@Model.Id",
            FullName: document.getElementById('inputFullName').value,
            Email: document.getElementById('inputEmail').value,
            PhoneNumber: document.getElementById('inputPhone').value,
            Role: parseInt(document.getElementById('selectRole').value)
        };

        const response = await fetch('/Admin/User/Edit', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(userData)
        });

        await handleResponse(response);
    }
        async function handleResponse(response) {
        const notify = document.getElementById("notifyArea");

        if (response.ok) {
            notify.innerHTML = `
                <div class="alert alert-success d-flex align-items-center shadow-sm rounded-3 fade show" role="alert">
                    <i class="fas fa-check-circle fs-4 me-3"></i>
                    <div>
                        <strong>Cập nhật thành công!</strong><br>
                        <small class="text-muted">Đang chuyển về danh sách người dùng...</small>
                    </div>
                </div>
            `;

            setTimeout(() => {
                window.location.href = "/Admin/User";
            }, 1200);

        } else {
            notify.innerHTML = `
                <div class="alert alert-danger d-flex align-items-center shadow-sm rounded-3 fade show" role="alert">
                    <i class="fas fa-times-circle fs-4 me-3"></i>
                    <div>
                        <strong>Cập nhật thất bại!</strong><br>
                        <small class="text-muted">Vui lòng kiểm tra lại dữ liệu.</small>
                    </div>
                </div>
            `;
        }
    }
</script>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        // 1. Khai báo các phần tử cần thiết
        const modalEl = document.getElementById("deleteUserModal");
        const inputConfirm = document.getElementById("deleteConfirmInput");
        const confirmBtn = document.getElementById("confirmDeleteBtn");
        const userNameEl = document.getElementById("deleteUserName");
        const userEmailEl = document.getElementById("deleteUserEmail");

        let deleteUserId = null;
        let bsModal = null;

        // Khởi tạo Bootstrap Modal instance một lần duy nhất
        if (modalEl) {
            bsModal = new bootstrap.Modal(modalEl);
        }

        /* ==========================================================
           LẮNG NGHE SỰ KIỆN NHẬP CHỮ 'DELETE'
           ========================================================== */
        if (inputConfirm) {
            inputConfirm.addEventListener("input", function () {
                const value = this.value.trim();
                // Sử dụng toUpperCase() để tránh lỗi người dùng quên bật CapsLock
                // Nếu bạn muốn bắt buộc viết HOA thì dùng: value === "DELETE"
                if (value.toUpperCase() === "DELETE") {
                    confirmBtn.disabled = false;
                } else {
                    confirmBtn.disabled = true;
                }
            });
        }

        /* ==========================================================
           MỞ MODAL KHI CLICK NÚT XOÁ (Dùng Event Delegation)
           ========================================================== */
        document.addEventListener("click", function (e) {
            const btn = e.target.closest(".btn-delete-edit");
            if (!btn) return;

            // Lấy ID và thông tin từ data attributes
            deleteUserId = btn.getAttribute("data-id");
            const name = btn.getAttribute("data-name");
            const email = btn.getAttribute("data-email");

            // Hiển thị thông tin lên Modal
            if (userNameEl) userNameEl.innerText = name;
            if (userEmailEl) userEmailEl.innerText = email;

            // Reset trạng thái ô nhập và nút bấm
            inputConfirm.value = "";
            confirmBtn.disabled = true;

            // Hiển thị Modal
            bsModal.show();
        });

        /* ==========================================================
           GỬI YÊU CẦU XOÁ LÊN SERVER
           ========================================================== */
        confirmBtn.addEventListener("click", async function () {
            // Kiểm tra bảo vệ cuối cùng trước khi fetch
            if (confirmBtn.disabled || !deleteUserId) return;

            // Đổi trạng thái nút để tránh click nhiều lần (Double click)
            confirmBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deleting...';
            confirmBtn.disabled = true;

            try {
                const response = await fetch(`/Admin/User/Delete/${deleteUserId}`, {
                    method: "DELETE",
                    headers: {
                        "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });

                if (response.ok) {
                   setTimeout(() => {
                window.location.href = "/Admin/User";
            }, 1200);
                } else {
                    const errorMsg = await response.text();
                    alert("Error: " + (errorMsg || "Could not delete user."));
                    resetDeleteButton();
                }
            } catch (error) {
                console.error("Delete error:", error);
                alert("Server connection error.");
                resetDeleteButton();
            }
        });

        // Hàm reset lại nút nếu xoá thất bại
        function resetDeleteButton() {
            confirmBtn.innerHTML = '<i class="bi bi-trash me-1"></i> Delete Account';
            confirmBtn.disabled = false;
        }

        /* ==========================================================
           RESET KHI ĐÓNG MODAL
           ========================================================== */
        modalEl.addEventListener("hidden.bs.modal", function () {
            deleteUserId = null;
            inputConfirm.value = "";
            confirmBtn.disabled = true;
            resetDeleteButton();
        });

    });
</script>






<script>
    document.addEventListener("DOMContentLoaded", function () {

        const modalEl = document.getElementById("changePasswordModal");
        const modal = new bootstrap.Modal(modalEl);

        let userId = null;

        document.addEventListener("click", function (e) {
            const btn = e.target.closest(".btn-change-password");
            if (!btn) return;

            userId = btn.dataset.id;

            document.getElementById("newPassword").value = "";
            document.getElementById("confirmPassword").value = "";
            document.getElementById("passwordError").classList.add("d-none");

            modal.show();
        });

        document.getElementById("submitChangePassword")
            .addEventListener("click", async function () {

                const pwd = document.getElementById("newPassword").value.trim();
                const confirm = document.getElementById("confirmPassword").value.trim();
                const error = document.getElementById("passwordError");

                    if (!pwd || pwd !== confirm) {
                    error.classList.remove("d-none");
                    error.innerText = "Passwords do not match.";
                    return;
                }


                const res = await fetch("/Admin/User/ChangePassword", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        userId: userId,
                        newPassword: pwd
                    })
                });

                   const notify = document.getElementById("notifyArea");

    if (res.ok) {
        modal.hide();

        notify.innerHTML = `
            <div class="alert alert-success d-flex align-items-center shadow-sm rounded-3 fade show" role="alert">
                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Password updated successfully!</strong><br>
                    <small class="text-muted">
                        Redirecting to user list...
                    </small>
                </div>
            </div>
        `;

        setTimeout(() => {
            window.location.href = "/Admin/User";
        }, 1200);

    } else {
        notify.innerHTML = `
            <div class="alert alert-danger d-flex align-items-center shadow-sm rounded-3 fade show" role="alert">
                <i class="bi bi-x-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Password update failed!</strong><br>
                    <small class="text-muted">
                        Please try again.
                    </small>
                </div>
            </div>
        `;
    }

            });
    });
</script>
